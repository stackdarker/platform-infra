{
  "uid": "platform-auth-starter",
  "title": "Platform Auth (Starter)",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "tags": ["platform", "auth", "spring-boot", "micrometer"],
  "time": { "from": "now-15m", "to": "now" },
  "templating": {
    "list": [
      {
        "name": "application",
        "type": "query",
        "datasource": "Prometheus",
        "refresh": 1,
        "query": "label_values(application_started_time_seconds, application)",
        "current": { "text": "platform-auth-service", "value": "platform-auth-service" }
      }
    ]
  },
  "panels": [
    {
      "type": "stat",
      "title": "Up",
      "datasource": "Prometheus",
      "gridPos": { "x": 0, "y": 0, "w": 4, "h": 4 },
      "targets": [
        {
          "expr": "up{job=\"platform-auth-service\"}",
          "refId": "A"
        }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "orientation": "auto" }
    },
    {
      "type": "stat",
      "title": "Uptime (seconds)",
      "datasource": "Prometheus",
      "gridPos": { "x": 4, "y": 0, "w": 4, "h": 4 },
      "targets": [
        {
          "expr": "process_uptime_seconds{application=\"$application\"}",
          "refId": "A"
        }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "orientation": "auto" }
    },
    {
      "type": "timeseries",
      "title": "HTTP Requests / sec (all endpoints)",
      "datasource": "Prometheus",
      "gridPos": { "x": 8, "y": 0, "w": 16, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{application=\"$application\"}[1m]))",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "HTTP Error Rate (4xx + 5xx) / sec",
      "datasource": "Prometheus",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{application=\"$application\",status=~\"4..|5..\"}[1m]))",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "HTTP Latency p95 (seconds)",
      "datasource": "Prometheus",
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le) (rate(http_server_requests_seconds_bucket{application=\"$application\"}[5m])))",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "JVM Memory Used (bytes)",
      "datasource": "Prometheus",
      "gridPos": { "x": 0, "y": 12, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(jvm_memory_used_bytes{application=\"$application\"})",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "JVM GC Pause (seconds/sec)",
      "datasource": "Prometheus",
      "gridPos": { "x": 12, "y": 16, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(jvm_gc_pause_seconds_sum{application=\"$application\"}[5m]))",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "HikariCP Connections",
      "datasource": "Prometheus",
      "gridPos": { "x": 0, "y": 20, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "hikaricp_connections_active{application=\"$application\"}",
          "refId": "A"
        },
        {
          "expr": "hikaricp_connections_idle{application=\"$application\"}",
          "refId": "B"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "CPU (process)",
      "datasource": "Prometheus",
      "gridPos": { "x": 12, "y": 24, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "rate(process_cpu_usage{application=\"$application\"}[1m])",
          "refId": "A"
        }
      ]
    }
  ]
}
